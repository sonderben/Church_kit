<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ChurchKit" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color.  -->
        <item name="colorPrimary">#283593</item>
        <item name="colorPrimaryVariant">#F2283593</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorPrimaryVariant</item>
        <item name="colorSecondaryVariant">#9C27B0</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.ChurchKit.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ChurchKit.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ChurchKit.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>