<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">




    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:tint="@color/colorEditorItemToolbar"
        android:padding="4dp"
        android:layout_marginHorizontal="2dp"
        android:src="@drawable/bookmark"/>

    <ImageView
        android:id="@+id/action_bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:tint="@color/colorEditorItemToolbar"
        android:layout_marginHorizontal="2dp"
        android:padding="4dp"
        android:src="@drawable/bold_24"/>

    <ImageView
        android:id="@+id/action_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:tint="@color/colorEditorItemToolbar"
        android:layout_marginHorizontal="2dp"
        android:padding="4dp"
        android:src="@drawable/underlined_24"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:tint="@color/colorEditorItemToolbar"
        android:layout_marginHorizontal="2dp"
        android:padding="4dp"
        android:src="@drawable/text_color_24"/>
    <ImageView
        android:id="@+id/action_insert_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:tint="@color/colorEditorItemToolbar"
        android:layout_marginHorizontal="2dp"
        android:padding="4dp"
        android:src="@drawable/link_24"/>
    <ImageView
        android:id="@+id/action_unordered_numbered"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:tint="@color/colorEditorItemToolbar"
        android:layout_marginHorizontal="2dp"
        android:padding="4dp"
        android:src="@drawable/list_numbered_48"/>
    <ImageView
        android:id="@+id/action_bulleted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:tint="@color/colorEditorItemToolbar"
        android:layout_marginHorizontal="2dp"
        android:padding="4dp"
        android:src="@drawable/list_bulleted_48"/>
    <ImageView
        android:id="@+id/ali"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:tint="@color/colorEditorItemToolbar"
        android:layout_marginHorizontal="2dp"
        android:padding="4dp"
        android:src="@drawable/align_left_24"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:tint="@color/colorEditorItemToolbar"
        android:layout_marginHorizontal="2dp"
        android:padding="4dp"
        android:src="@drawable/align_center_24"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:tint="@color/colorEditorItemToolbar"
        android:layout_marginHorizontal="2dp"
        android:padding="4dp"
        android:src="@drawable/align_right_24"/>

</LinearLayout>