<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.note.EditerNoteFragment">






    <EditText
        android:id="@+id/areditor"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="top|left"
        android:fontFamily="@font/sono_regular"
        android:background="@android:color/transparent"
        android:layout_margin="@dimen/_10sdp"
        android:inputType="textMultiLine|textNoSuggestions"
        android:textSize="@dimen/_14ssp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        app:cardElevation="10dp"
        android:visibility="gone"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent">
        <LinearLayout
            android:id="@+id/editor_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingHorizontal="@dimen/_5sdp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/undo_24"
                android:layout_marginHorizontal="2dp"
                android:padding="4dp"
                app:tint="@color/colorEditorItemToolbar" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:tint="@color/colorEditorItemToolbar"
                android:padding="4dp"
                android:layout_marginHorizontal="2dp"
                android:src="@drawable/redo_24"/>

            <ImageView
                android:id="@+id/action_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:tint="@color/colorEditorItemToolbar"
                android:layout_marginHorizontal="2dp"
                android:padding="4dp"
                android:src="@drawable/bold_24"/>
            <ImageView
                android:id="@+id/action_Italic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:tint="@color/colorEditorItemToolbar"
                android:padding="4dp"
                android:layout_marginHorizontal="2dp"
                android:src="@drawable/italic_24"/>
            <ImageView
                android:id="@+id/action_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:tint="@color/colorEditorItemToolbar"
                android:layout_marginHorizontal="2dp"
                android:padding="4dp"
                android:src="@drawable/underlined_24"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:tint="@color/colorEditorItemToolbar"
                android:layout_marginHorizontal="2dp"
                android:padding="4dp"
                android:src="@drawable/text_color_24"/>
            <ImageView
                android:id="@+id/action_insert_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:tint="@color/colorEditorItemToolbar"
                android:layout_marginHorizontal="2dp"
                android:padding="4dp"
                android:src="@drawable/link_24"/>
            <ImageView
                android:id="@+id/action_unordered_numbered"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:tint="@color/colorEditorItemToolbar"
                android:layout_marginHorizontal="2dp"
                android:padding="4dp"
                android:src="@drawable/list_numbered_48"/>
            <ImageView
                android:id="@+id/action_bulleted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:tint="@color/colorEditorItemToolbar"
                android:layout_marginHorizontal="2dp"
                android:padding="4dp"
                android:src="@drawable/list_bulleted_48"/>
            <ImageView
                android:id="@+id/ali"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:tint="@color/colorEditorItemToolbar"
                android:layout_marginHorizontal="2dp"
                android:padding="4dp"
                android:src="@drawable/align_left_24"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:tint="@color/colorEditorItemToolbar"
                android:layout_marginHorizontal="2dp"
                android:padding="4dp"
                android:src="@drawable/align_center_24"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:tint="@color/colorEditorItemToolbar"
                android:layout_marginHorizontal="2dp"
                android:padding="4dp"
                android:src="@drawable/align_right_24"/>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>