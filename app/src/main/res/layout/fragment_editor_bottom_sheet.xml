<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/main_bg"
    android:paddingTop="5dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linear_layout_color_picker"
       android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

    </LinearLayout>



    <LinearLayout
        android:id="@+id/layout_photo"
        android:layout_width="0dp"
        app:layout_constraintTop_toBottomOf="@id/linear_layout_color_picker"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="@id/linear_layout_color_picker"
        app:layout_constraintRight_toRightOf="@id/linear_layout_color_picker"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <View
            android:layout_width="100dp"
            android:background="@color/black"
            android:layout_height="5dp"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/download_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_11sdp"
                android:layout_marginRight="6dp"
                android:padding="@dimen/_5sdp"
                android:layout_marginHorizontal="@dimen/_2sdp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:drawableLeft="@drawable/download_24"
                android:background="@drawable/bg_gradient" />
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/status_whatsapp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_2sdp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/download_image"
                android:padding="@dimen/_5sdp"
                android:background="@drawable/bg_gradient"
                android:drawableLeft="@drawable/whatsapp_24"
                android:layout_marginRight="6dp" />
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/instagram"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_2sdp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/status_whatsapp"
                android:padding="@dimen/_5sdp"
                android:background="@drawable/bg_gradient"
                android:layout_marginRight="6dp"
                android:drawableLeft="@drawable/instagram_24"/>




            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toLeftOf="@id/random_color"
                android:background="@drawable/bg_gradient"
                android:layout_margin="@dimen/_2sdp"
                android:padding="@dimen/_5sdp"
                android:drawableLeft="@drawable/text_color_24" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/random_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_2sdp"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@drawable/bg_gradient"
                app:layout_constraintRight_toLeftOf="@id/random_img"
                android:padding="@dimen/_5sdp"
                android:drawableLeft="@drawable/color_palette" />
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/random_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_2sdp"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@drawable/bg_gradient"
                app:layout_constraintRight_toLeftOf="@id/open_gallery"
                android:padding="@dimen/_5sdp"
                android:drawableLeft="@drawable/photo_from_gallery"/>
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/open_gallery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_2sdp"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@drawable/bg_gradient"
                app:layout_constraintRight_toRightOf="parent"
                android:padding="@dimen/_5sdp"

                android:drawableLeft="@drawable/gallery_add_24"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <ImageView
            android:id="@+id/my_image_view"
            android:layout_width="match_parent"
            android:background="@drawable/textview_border"
            android:layout_margin="5dp"
            android:layout_marginTop="1dp"
            app:layout_constraintBottom_toTopOf="@id/action"
            android:layout_height="wrap_content"/>
    </LinearLayout>




    <LinearLayout
        android:id="@+id/action"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:elevation="4dp"
        android:background="@color/main_bg"
        app:layout_constraintTop_toBottomOf="@id/layout_photo"
        android:layout_height="wrap_content">
        <LinearLayout
            android:paddingHorizontal="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </LinearLayout>
       <HorizontalScrollView
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <LinearLayout
               android:layout_width="match_parent"
               android:orientation="horizontal"
               android:gravity="center"
               android:layout_height="wrap_content">
               <com.google.android.material.textview.MaterialTextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:background="@drawable/textview_border"
                   android:layout_marginHorizontal="6dp"
                   android:padding="5dp"
                   android:text="1:1"/>
               <com.google.android.material.textview.MaterialTextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginHorizontal="6dp"
                   android:background="@drawable/textview_border"
                   android:padding="5dp"
                   android:text="4:3"/>
               <com.google.android.material.textview.MaterialTextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginHorizontal="6dp"
                   android:background="@drawable/textview_border"
                   android:padding="5dp"
                   android:text="3:4"/>
               <com.google.android.material.textview.MaterialTextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginHorizontal="6dp"
                   android:background="@drawable/textview_border"
                   android:padding="5dp"
                   android:text="3:2"/>
               <com.google.android.material.textview.MaterialTextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginHorizontal="6dp"
                   android:background="@drawable/textview_border"
                   android:padding="5dp"
                   android:text="2:3"/>


               <com.google.android.material.textview.MaterialTextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginHorizontal="6dp"
                   android:background="@drawable/textview_border"
                   android:padding="5dp"
                   android:text="5:4"/>
               <com.google.android.material.textview.MaterialTextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginHorizontal="6dp"
                   android:background="@drawable/textview_border"
                   android:padding="5dp"
                   android:text="4:5"/>


               <com.google.android.material.textview.MaterialTextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginHorizontal="6dp"
                   android:background="@drawable/textview_border"
                   android:padding="5dp"
                   android:text="16:9"/>
               <com.google.android.material.textview.MaterialTextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginHorizontal="6dp"
                   android:background="@drawable/textview_border"
                   android:padding="5dp"
                   android:text="9:16"/>

           </LinearLayout>
       </HorizontalScrollView>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="@dimen/_30sdp"
            android:layout_height="wrap_content">

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>