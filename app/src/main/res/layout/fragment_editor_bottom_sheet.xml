<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/main_bg"
    android:paddingTop="5dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linear_layout_color_picker"
       android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

    </LinearLayout>



    <LinearLayout
        android:id="@+id/layout_photo"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/linear_layout_color_picker"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <View
            android:layout_width="100dp"
            android:background="@color/black"
            android:layout_height="5dp"/>
        <ImageView
            android:id="@+id/my_image_view"
            android:layout_width="match_parent"
            android:minHeight="400dp"
            android:scaleType="centerCrop"
            android:background="@drawable/textview_border"
            android:layout_margin="5dp"
            android:layout_marginTop="1dp"
            app:layout_constraintBottom_toTopOf="@id/action"
            android:layout_height="wrap_content"/>
    </LinearLayout>




    <LinearLayout
        android:id="@+id/action"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:elevation="4dp"
        android:background="@color/main_bg"
        app:layout_constraintTop_toBottomOf="@id/layout_photo"
        android:layout_height="wrap_content">
        <LinearLayout
            android:paddingHorizontal="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Text size"/>
            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
       <HorizontalScrollView
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <LinearLayout
               android:layout_width="match_parent"
               android:orientation="horizontal"
               android:gravity="center"
               android:layout_height="wrap_content">
               <com.google.android.material.textview.MaterialTextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:background="@drawable/textview_border"
                   android:layout_marginHorizontal="6dp"
                   android:padding="5dp"
                   android:text="1:1"/>
               <com.google.android.material.textview.MaterialTextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginHorizontal="6dp"
                   android:background="@drawable/textview_border"
                   android:padding="5dp"
                   android:text="4:3"/>
               <com.google.android.material.textview.MaterialTextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginHorizontal="6dp"
                   android:background="@drawable/textview_border"
                   android:padding="5dp"
                   android:text="3:4"/>
               <com.google.android.material.textview.MaterialTextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginHorizontal="6dp"
                   android:background="@drawable/textview_border"
                   android:padding="5dp"
                   android:text="3:2"/>
               <com.google.android.material.textview.MaterialTextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginHorizontal="6dp"
                   android:background="@drawable/textview_border"
                   android:padding="5dp"
                   android:text="2:3"/>


               <com.google.android.material.textview.MaterialTextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginHorizontal="6dp"
                   android:background="@drawable/textview_border"
                   android:padding="5dp"
                   android:text="5:4"/>
               <com.google.android.material.textview.MaterialTextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginHorizontal="6dp"
                   android:background="@drawable/textview_border"
                   android:padding="5dp"
                   android:text="4:5"/>


               <com.google.android.material.textview.MaterialTextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginHorizontal="6dp"
                   android:background="@drawable/textview_border"
                   android:padding="5dp"
                   android:text="16:9"/>
               <com.google.android.material.textview.MaterialTextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginHorizontal="6dp"
                   android:background="@drawable/textview_border"
                   android:padding="5dp"
                   android:text="9:16"/>

           </LinearLayout>
       </HorizontalScrollView>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/download_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:padding="5dp"
                android:background="@drawable/bg_gradient"
                android:text="Download"/>
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:background="@drawable/bg_gradient"
                android:layout_marginRight="6dp"
                android:text="Share"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/status_whatsapp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:background="@drawable/bg_gradient"
                android:layout_marginRight="6dp"
                android:text="Whatsapp"/>
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:background="@drawable/bg_gradient"
                android:layout_marginRight="6dp"
                android:text="Instagram"/>
        </LinearLayout>

    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_ebs"
        android:layout_width="match_parent"
        android:elevation="1dp"
        app:layout_constraintTop_toBottomOf="@id/action"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="0dp">

    </androidx.recyclerview.widget.RecyclerView>
</androidx.constraintlayout.widget.ConstraintLayout>