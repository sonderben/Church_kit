<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F4F6"
    tools:context=".MainActivity">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/search"
        android:layout_width="330dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="45dp"
        android:background="@drawable/bg_edittext"
        android:hint="Chèche yon chan"
        android:paddingLeft="12dp"
        android:inputType="textCapWords"
        android:textColorHint="#D9D9D9"
        android:textColor="@color/white"
        android:drawableRight="@drawable/search_24"
        android:drawableTint="@color/white"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <ScrollView
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/search"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardview1"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:strokeColor="@color/white"
                app:strokeWidth="4dp"
                app:cardElevation="20dp"
                android:background="@mipmap/img_bg_french"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/search">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/img1"
                        android:layout_width="wrap_content"
                        android:layout_height="173dp"
                        android:scaleType="centerCrop"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:src="@mipmap/img_bg_creole" />
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/white"
                        android:text="9 Pati"
                        app:layout_constraintBottom_toBottomOf="@id/img1"
                        app:layout_constraintRight_toRightOf="@id/img1"
                        android:textAlignment="textEnd"
                        />
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:text="Kreyòl"
                        app:layout_constraintTop_toBottomOf="@id/img1"
                        app:layout_constraintEnd_toEndOf="@id/img1"
                        android:textAlignment="center"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>
            <View
                android:layout_width="0dp"
                android:layout_height="102dp"/>
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardview2"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:strokeColor="@color/white"
                app:strokeWidth="4dp"
                app:cardElevation="20dp"
                android:background="@mipmap/img_bg_french"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/search">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/img2"
                        android:layout_width="wrap_content"
                        android:layout_height="173dp"
                        android:scaleType="centerCrop"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:src="@mipmap/img_bg_french" />
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/white"
                        android:text="20 Pati"
                        app:layout_constraintBottom_toBottomOf="@id/img2"
                        app:layout_constraintRight_toRightOf="@id/img2"
                        android:textAlignment="textEnd"
                        />
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:text="Fransè"
                        app:layout_constraintTop_toBottomOf="@id/img2"
                        app:layout_constraintEnd_toEndOf="@id/img2"
                        android:textAlignment="center"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>